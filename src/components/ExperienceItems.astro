---
interface Props {
	date: string;
	title: string;
	content: string;
	job: string;
}
const { date, title, content, job } = Astro.props;
---

<div class="text-md font-semibold text-purple-200/70 mb-1 sm:mb-0">{job}</div>
<div
	class="flex flex-col sm:flex-row items-start mb-1 group-last:before:hidden before:absolute before:left-2 sm:before:left-0 before:h-full before:px-px before:bg-slate-300 sm:before:ml-[6.5rem] before:self-start before:-translate-x-1/2 before:translate-y-3 after:absolute after:left-2 sm:after:left-0 after:w-2 after:h-2 after:bg-green-200/90 after:border-4 after:box-content after:border-slate-50 after:rounded-full sm:after:ml-[6.5rem] after:-translate-x-1/2 after:translate-y-1.5"
>
	<time
		class="sm:absolute -left-11 translate-y-0.5 inline-flex items-center justify-center text-xs font-semibold uppercase w-32 h-6 mb-3 sm:mb-0 text-emerald-600 bg-emerald-100 rounded-full"
		>{date}</time
	>
	<div class="text-xl font-bold text-slate-100">
		{title}
	</div>
</div>
<div class="text-slate-300 text-pretty">
	{content}
</div>
